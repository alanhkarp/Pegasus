{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Pegaus build",
			"type": "cargo",
			"command": "build",
			"args": ["--bin", 
				"app_agent"],
			"problemMatcher": [
				"$rustc"
			],
			"dependsOn": ["Pegasus format"],
			"group": "build",
		},
		{
			"label": "Pegaus check",
			"type": "cargo",
			"command": "check",
			"args": ["--bin", 
				"app_agent"
			],
			"problemMatcher": [
				"$rustc"
			],
			"dependsOn": ["Pegasus format"],
			"group": "build",
		},
		{
			"label": "Pegasus format",
			"type": "cargo",
			"command": "fmt",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build"
		},
		{
			"label": "Pegaus run",
			"type": "cargo",
			"command": "run",
			"args": ["--bin",
				"app_agent"
			],
			"problemMatcher": [
				"$rustc"
			],
			"dependsOn": ["Pegasus format", "Client build"],
			"group": "build",
		},
		{
			"label": "Pegaus run Docker",
			"type": "cargo",
			"command": "run",
			"args": ["--bin",
				"app_agent",
				"--features",
				"docker"
			],
			"problemMatcher": [
				"$rustc"
			],
			"dependsOn": ["Pegasus format", "Client build container"],
			"group": "build",
		},
		{
			"label": "Pegaus doc",
			"type": "cargo",
			"command": "doc",
			"args": ["--bin", 
				"app_agent"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
		},
		{
			"label": "Pegaus test",
			"type": "cargo",
			"command": "test",
			"args": [
				"--bin", 
				"app_agent",
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
		},
		{
			"label": "Client build container",
			"type": "cargo",
			"command": "build",
			"args": [
				"--bin", 
				"client",
				"--target", 
				"x86_64-unknown-linux-musl",
				"--features",
				"docker"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
		},
		{
			"label": "Client check",
			"type": "cargo",
			"command": "check",
			"args": [
				"--bin", 
				"client"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
		},
		{
			"label": "Client run",
			"type": "cargo",
			"command": "run",
			"args": ["--bin", 
				"client", 
				"foobar"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
		},
		{
			"label": "Client build",
			"type": "cargo",
			"command": "build",
			"args": ["--bin", 
				"client"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
		},
		{
			"label": "Client doc",
			"type": "cargo",
			"command": "doc",
			"args": ["--bin",
				"client"],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
		},
		{
			"label": "Client test",
			"type": "cargo",
			"command": "test",
			"args": ["--bin", 
				"client"],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
		},
	]
}